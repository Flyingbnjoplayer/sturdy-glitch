import { NextRequest, NextResponse } from 'next/server';
import { put } from '@vercel/blob';

export async function POST(request: NextRequest): Promise<NextResponse> {
  try {
    console.log('üé® NFT metadata upload endpoint called');
    
    // Check if Vercel Blob token is configured
    if (!process.env.BLOB_READ_WRITE_TOKEN) {
      console.error('‚ö†Ô∏è  BLOB_READ_WRITE_TOKEN environment variable is not configured');
      return NextResponse.json(
        { 
          error: 'Image storage not configured. Please set up Vercel Blob storage.', 
          details: 'BLOB_READ_WRITE_TOKEN environment variable is missing' 
        },
        { status: 500 }
      );
    }
    
    const formData = await request.formData();
    const file = formData.get('file') as File;
    const name = formData.get('name') as string;
    const description = formData.get('description') as string;

    console.log('üìã NFT Details:', { name, description, fileName: file?.name });

    if (!file) {
      console.error('‚ùå No file provided in form data');
      return NextResponse.json({ error: 'No file provided' }, { status: 400 });
    }

    if (!name) {
      console.error('‚ùå No name provided in form data');
      return NextResponse.json({ error: 'No name provided' }, { status: 400 });
    }

    // Upload image to Vercel Blob
    console.log(`‚òÅÔ∏è  Uploading NFT image to Vercel Blob...`);
    const imageBlob = await put(`nft-images/${Date.now()}-${file.name}`, file, {
      access: 'public',
    });
    console.log('‚úÖ NFT image uploaded:', imageBlob.url);

    // Create metadata object (ERC-721 standard)
    const metadata = {
      name,
      description: description || 'Glitch art created on Base',
      image: imageBlob.url,
      attributes: [
        {
          trait_type: 'Type',
          value: 'Glitch Art',
        },
        {
          trait_type: 'Created With',
          value: 'Glitch Photo Editor',
        },
        {
          trait_type: 'Network',
          value: 'Base',
        },
        {
          trait_type: 'Timestamp',
          value: new Date().toISOString(),
        },
      ],
    };

    // Upload metadata JSON to Vercel Blob
    console.log('‚òÅÔ∏è  Uploading NFT metadata JSON...');
    const metadataBlob = await put(
      `nft-metadata/${Date.now()}-metadata.json`,
      JSON.stringify(metadata),
      {
        access: 'public',
        contentType: 'application/json',
      }
    );
    console.log('‚úÖ NFT metadata uploaded:', metadataBlob.url);

    return NextResponse.json({
      success: true,
      imageUri: imageBlob.url,
      metadataUri: metadataBlob.url,
      metadata,
    });
  } catch (error) {
    console.error('‚ùå Error uploading NFT metadata:', error);
    const errorMessage = error instanceof Error ? error.message : 'Unknown error';
    console.error('Error details:', errorMessage);
    
    // Check for specific Vercel Blob errors
    if (errorMessage.includes('BLOB_READ_WRITE_TOKEN')) {
      console.error('‚ö†Ô∏è  BLOB_READ_WRITE_TOKEN environment variable is not set');
      return NextResponse.json(
        { error: 'Server configuration error: Missing blob storage credentials', details: errorMessage },
        { status: 500 }
      );
    }
    
    return NextResponse.json(
      { error: 'Failed to upload NFT metadata', details: errorMessage },
      { status: 500 }
    );
  }
}
